fx:controller="com.example.employeematrix.HelloController">
   <children>
      <AnchorPane fx:id="main_form" prefHeight="400.0" prefWidth="600.0">
         <children>
            <AnchorPane prefHeight="400.0" prefWidth="300.0" styleClass="left-form" stylesheets="@loginDesign.css">
               <children>
                  <FontAwesomeIcon fill="WHITE" glyphName="USERS" layoutX="97.0" layoutY="164.0" size="8em" />
                  <Label layoutX="43.0" layoutY="200.0" text="Employee Handler " textFill="WHITE">
                     <font><Font name="Verdana Bold" size="20.0" /></font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane layoutX="300.0" prefHeight="400.0" prefWidth="300.0" styleClass="right-form" stylesheets="@loginDesign.css">
               <children>
                  <Label layoutX="40.0" layoutY="89.0" text="Welcome Back!" textFill="#4d00ffdf">
                     <font>
                        <Font name="Verdana Bold" size="17.0" />
                     </font>
                  </Label>
                  <TextField fx:id="username" layoutX="40.0" layoutY="143.0" onAction="#loginAdmin" prefHeight="30.0" prefWidth="220.0" 
                  promptText="Username" styleClass="textfield" stylesheets="@loginDesign.css" />
